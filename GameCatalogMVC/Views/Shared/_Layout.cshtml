<!DOCTYPE html>
<html>
<head>    
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Game Catalog MVC</title>
    <link href="~/Content/icon.ico" rel="shortcut icon" type="image/x-icon" />    
    <style type="text/css">
        body
        {
            background-color: #F5F5F5;            
        }
        #divHomePage
        {
            /*margin-left: 5px;
            margin-right: 5px;            
            margin: 5px auto;*/
            background-color: White;
        }
    </style>

    @Styles.Render("~/Content/css/site")  
    @Styles.Render("~/Content/css/jqueryui")
    @Styles.Render("~/Content/css/bootstrap")    
    @RenderSection("Styles", false)                                    @* Add Styles section  *@
</head>
<body>    
    @Scripts.Render("~/bundles/scripts/jquery")
    @Scripts.Render("~/bundles/scripts/jqueryui")    
    @Scripts.Render("~/bundles/scripts/jqueryval") 
    @Scripts.Render("~/bundles/scripts/modernizr")            
    @Scripts.Render("~/bundles/scripts/bootstrap")                              
    
    @RenderSection("Scripts", required: false)                          @* Add Scripts section  *@
    
    <div class="container-fluid col-md-10 col-md-offset-1">
        <div id="divHomePage">
            @Html.Partial("Header")  
            @Html.Partial("Menu")          
            @RenderBody()
            @Html.Partial("Footer")          
        </div>    
    </div>
</body>
</html>
